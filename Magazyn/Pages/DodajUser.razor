@page "/DodajUser"
@using Magazyn.Data
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.DropDowns
@using Syncfusion.Blazor.Buttons 
@using Magazyn.Models
@inject UserService objEmpService
@inject NavigationManager NavigationMenager


    <div class="card w-75">
 
        <div class="card-header">
            <h5>  Dodaj Użytkownika</h5>
        </div>
        <div class="card-body">

            <form>
                <div class=" row">
                    <div class=" col-md-8">
                        @*szerokośc formularza*@
                        <div class=" form-group">
                            <div class="col-xs-10 col-sm-10 col-lg-10 col-md-10">
                                <SfTextBox Placeholder="Imię" FloatLabelType="@FloatLabelType.Auto" @bind-Value="@objEmp.Imie"></SfTextBox>
                             
                            </div>
                            <div class="col-xs-10 col-sm-10 col-lg-10 col-md-10">
                                <SfTextBox Placeholder="Nazwisko" FloatLabelType="@FloatLabelType.Auto" @bind-Value="@objEmp.Nazwisko"></SfTextBox>
                            </div>
                            <div class="col-xs-10 col-sm-10 col-lg-10 col-md-10">
                                <SfTextBox Placeholder="Użytkownik" FloatLabelType="@FloatLabelType.Auto" @bind-Value="@objEmp.User"></SfTextBox>
                            </div>
                            <div class="col-xs-10 col-sm-10 col-lg-10 col-md-10">
                                <SfTextBox Placeholder="Hasło" FloatLabelType="@FloatLabelType.Auto" Type="Password" @bind-Value="@objEmp.Password"></SfTextBox>
                            </div>
                            <div class="col-xs-10 col-sm-10 col-lg-10 col-md-10">
                                <SfTextBox Placeholder="Nr ewid." FloatLabelType="@FloatLabelType.Auto" @bind-Value="@objEmp.Ean_User"></SfTextBox>
                            </div>

                            <div class="col-xs-10 col-sm-10 col-lg-10 col-md-10">

                                <p /> <SfCheckBox Label="Aktywny"></SfCheckBox> <p />
                                <p>  <SfCheckBox Label="Administrator" Checked="false"></SfCheckBox></p>
                                <SfCheckBox Label="Dostęp" Checked="true"></SfCheckBox>

                            </div>
                            @*  <SfCheckBox Label="Dostęp do logowania" @bind-Checked="@objEmp.Logowanie"></SfCheckBox>*@
                        </div>
                        
                    </div>
                </div>
                <hr />
                <div class=" row">
                    <div class=" col-md-4">
                        <div class=" form-group">
                             <input type="button" class=" btn btn-outline-primary"  @onclick="@CreateEmployee" value=" Zapisz" />
                             <input type="button" class=" btn btn-outline-secondary  " @onclick="@Cancel" value=" Anuluj" />


                        </div>
                    </div>

                </div>

            </form>
        </div>
    </div>

        @code {
            Tbuser objEmp = new Tbuser();


            protected void CreateEmployee()
            {
                objEmpService.Create(objEmp);
                NavigationMenager.NavigateTo("User");
            }
            void Cancel()
            {
                NavigationMenager.NavigateTo("User");
            }

        }
